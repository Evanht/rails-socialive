<div class="row">
    <div class="card-dashboard">
    <% @mylivestreams.first(3).each do |livestream| %>
      <div class="col-xs-12 col-sm-6 col-md-4">

        <!-- Waiting for photos to come from attachinary -->

        <%# if livestream.photos? %>
        <!-- <div class="card"
        style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%#=image_path 'chef.png'%>')"> -->
        <%# else %>

          <div class="card-square" >
            <div class="card-square-image" style="background-image: url('<%= image_path 'chef.png'%>');">
