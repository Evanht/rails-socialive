<div class="container" >
  <h1 class="text-center">Here are the upcoming livestreams corresponding to your search:</h1>
  <br> <br> <br>
    <div class="row">

      <% @livestreams.each do |livestream| %>
      <div class="col-xs-12">
        <div class="card-container">
          <div class="card-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path 'chef.png'%>')"><%= image_tag "logo.svg" %></div>


          <div class="card-wrapper">
          <!-- replace with livestream.time -->
          <div><h3 class="live-time">Monday 9am</h3></div>
            <div class="card-description card-wrapper-description">
              <h2><%= livestream.title %></h2>
              <p><%= livestream.user.email %></p>
              <!-- replace with livestream.description -->
              <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Deleniti rerum labore nihil molestiae vero ad illo harum saepe dicta assumenda, aperiam nesciunt dolorem omnis est modi iure doloremque, quia, incidunt.</p>
              <p><strong><%= livestream.category %></strong></p>
            </div>
            <div class="card-wrapper-social">
            <div class="card-description card-wrapper-social-description">
            <!-- replace with user social information -->
            <ul class="list-inline">
              <li>1,346 fans</li><i class="fa fa-heart-o" aria-hidden="true"></i>
              <li>46 streams</li><i class="fa fa-play-circle-o" aria-hidden="true"></i>
              <li>320,000 views</li><i class="fa fa-eye" aria-hidden="true"></i>
            </ul>

            </div>
            </div>

          </div>
          <%= link_to "", livestream_path(livestream), class: "card-link" %>
        </div>
      </div>
      <% end %>

    </div>

</div>










